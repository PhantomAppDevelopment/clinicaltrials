<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="HomeView" actionBarVisible="false" destructionPolicy="never">
	<fx:Script>
		<![CDATA[
			import diaryViews.diaryView;			
			import learnViews.learnView;			
			import scheduleViews.scheduleView;			
			import travelViews.travelView;
		]]>
	</fx:Script>
	
	
	
	<s:Group click="navigator.pushView(learnView)" left="0" top="0" width="50%" height="50%">
		<s:BitmapImage source="@Embed('assets/2.png')" width="100%" height="100%" scaleMode="zoom"/>
		<s:Label text="Learn" horizontalCenter="0" verticalCenter="0" fontFamily="MyFont" fontSize="24" color="#FFFFFF"/>
	</s:Group>
	
	<s:Group click="navigator.pushView(scheduleView)" right="0" top="0" width="50%" height="50%">
		<s:BitmapImage source="@Embed('assets/1.png')" width="100%" height="100%" scaleMode="zoom"/>
		<s:Label text="Schedule" horizontalCenter="0" verticalCenter="0" fontFamily="MyFont" fontSize="24" color="#FFFFFF"/>
	</s:Group>
	
	<s:Group click="navigator.pushView(travelView)" left="0" bottom="0" width="50%" height="50%">
		<s:BitmapImage source="@Embed('assets/0.png')" width="100%" height="100%" scaleMode="zoom"/>
		<s:Label text="Travel" horizontalCenter="0" verticalCenter="0" fontFamily="MyFont" fontSize="24" color="#FFFFFF"/>
	</s:Group>
	
	<s:Group click="navigator.pushView(diaryView)" right="0" bottom="0" width="50%" height="50%">
		<s:BitmapImage source="@Embed('assets/3.png')" width="100%" height="100%" scaleMode="zoom"/>
		<s:Label text="Diary" horizontalCenter="0" verticalCenter="0" fontFamily="MyFont" fontSize="24" color="#FFFFFF"/>
	</s:Group>

</s:View>
